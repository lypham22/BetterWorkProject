@model BW.Data.Contract.DTOs.RoleView
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Role Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoleName)
        </dd>
        <dt>
            @Html.Label("Role Description")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoleDescription)
        </dd>

        <dt>
            @Html.Label("Created Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.Label("Is Active")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            @Html.Label("Module name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModuleName)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { roleId = Model.RoleId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
